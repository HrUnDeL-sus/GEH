<UserControl x:Class="GameEngineHrundelGUI.Console"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameEngineHrundelGUI"
             mc:Ignorable="d" d:DesignWidth="500" Height="876">
    <Grid>
        <ScrollViewer>
            <StackPanel Background="#FF151515">
                <StackPanel x:Name="TrailingLinesStackPanel">
                    
                </StackPanel>
                <WrapPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Consolas" Text=">" Foreground="White" FontSize="16" TextWrapping="Wrap"/>
                    <TextBox  x:Name="ConsoleInputTextBox" Text="Hello user" FontFamily="Consolas" Foreground="White" FontSize="16" TextWrapping="Wrap" Background="{x:Null}" BorderBrush="{x:Null}" SelectionBrush="White" KeyUp="ConsoleTextBlock_KeyUp"/>
                </WrapPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
